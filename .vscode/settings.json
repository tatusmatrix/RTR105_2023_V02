// add Clang-Format extension before
// place clang-format executable
{
    "clang-format.executable": "${workspaceRoot}/bin/clang-format",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "xaver.clang-format",
    "files.associations": {
        "typeindex": "c",
        "typeinfo": "c"
    }
}